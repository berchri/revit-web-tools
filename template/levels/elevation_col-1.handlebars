<div class="d-flex rh-1">
    <div class="col {{colWall}}"></div>
    <div class="col col-storeyheight" data-storey="{{storeyName}}"></div>
    <div class="col col-inputs d-flex align-items-{{elevationDirectionClass}} py-1" data-storey="{{storeyName}}">
        <div class="level-card border rounded p-2" data-id="{{id}}">
            <div class="d-flex justify-content-between align-items-center mb-2 card-head">
                <h1 class="h6 mb-0">{{levelName}}</h1>
                <div>
                    <span class="icon-card-dir" data-id="i-up-{{id}}">
                        <svg class="icon-dir">
                            <use href="#arrow-up-circle-fill" class="icon-size-big"></use>
                        </svg>
                    </span>
                    <span class="icon-card-dir" data-id="i-down-{{id}}">
                        <svg class="icon-dir">
                            <use href="#arrow-down-circle-fill" class="icon-size-big"></use>
                        </svg>
                    </span>
                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <div class="text-right">{{levelType}}</div>
                <div class="input-group ml-2 card-input">
                    <input name="{{levelName}}" type="text" class="form-control" id="{{id}}" placeholder="HÃ¶he eingeben"
                        value="{{levelElevation}}" data-type="{{levelType}}" />
                    <div class="invalid-tooltip" id="{{id}}-notification"></div>
                    <div class="input-group-append">
                        <span class="input-group-text">m</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>